<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideActivity">


    <EditText
        android:id="@+id/et_guide_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/guide_app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_guide_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/homework_1"
        app:layout_constraintTop_toBottomOf="@+id/et_guide_name" />

    <Button
        android:id="@+id/bt_guide_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="作业二"
        app:layout_constraintTop_toBottomOf="@+id/bt_guide_1" />

    <Button
        android:id="@+id/bt_guide_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="作业三"
        app:layout_constraintTop_toBottomOf="@+id/bt_guide_2" />


    <Button
        android:id="@+id/bt_guide_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="实验一"
        app:layout_constraintTop_toBottomOf="@+id/bt_guide_3" />



</android.support.constraint.ConstraintLayout>